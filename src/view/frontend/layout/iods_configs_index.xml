<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <!--
    /*
     * Notes:
     *
     */
    -->
    <head>
        <title>Iods Configuration Suite for Magento</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="iods.configs.default"
                   template="Iods_Configs::config.phtml">
                <arguments>
                    <argument name="config_pool" xsi:type="object">Iods\Configs\ViewModel\ConfigPool</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>